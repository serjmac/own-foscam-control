<% layout('layouts/boilerplate')%>
<head>
  <!-- <link rel="stylesheet" href="/styles.css" /> -->
</head>

<div class="col-lg-8 text-center mx-auto">
  <div id="buttons" class="row justify-content-center border p-2 rounded">
    <form id="switchButtons" action="" class="row justify-content-center mt-3 mb-2" method="GET">
      <button type="submit" class="onButton btn btn-success btn-lg col me-1" formaction="/enable">Enable</button>
      <button type="submit" class="offButton btn btn-danger btn-lg col ms-1" formaction="/disable">Disable</button>
    </form>

    <form id="closeButton" class="row justify-content-center mb-4" action="/close" method="GET">
      <button class="closeButton btn btn-light btn-lg col">Close</button>
    </form>
  </div>
  <div class="row border pt-3 rounded">
    <div>
      <% if (newImg.alarmStatus === "0") { %>
      <h2>Alarm is <strong>Disabled</strong></h2>
      <% } %> <% if (newImg.alarmStatus === "1") { %>
      <h2>Alarm is <strong>Enabled</strong></h2>
      <% }%>
    </div>
    <div>
      <% if(newImg.showImage===true){ %>
      <h6>Showing image:</h6>
      <img class="mb-3" id="homeImg" src="data:image/jpeg;base64,<%= newImg.imageB64 %>" alt="img could not be loaded" /> <% } %>
    </div>
  </div>
</div>
<script>
  const home = document.getElementById("home");
  home.classList.toggle("active");
  const homeImg = document.getElementById("homeImg");
  homeImg.addEventListener("dblclick", function (e) {
    window.open("data:image/jpeg;base64,<%= newImg.imageB64 %>", (target = "_blank"));
  });
</script>
